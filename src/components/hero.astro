---
import Image from "astro/components/Image.astro";

// adjust these variable to change your content
const mainText = "Our Mission";
const secondaryText = "to keep you safe";
---

<head>
  <link rel="preload" href="/landscape.jpg" as="image" />
</head>
<section class="relative z-[-10] h-[70vh] w-full">
  <Image
    data-testid="landscape-img"
    src="/landscape.jpg"
    alt="hero"
    loading="eager"
    class="absolute inset-0 h-full w-full object-cover sicko:hidden"
    width={1920}
    height={1080}
  />
  <Image
    data-testid="landscape-sicko-img"
    src="/landscape-sicko.png"
    alt="hero"
    loading="eager"
    class="absolute inset-0 h-full w-full object-cover hidden dark:hidden sicko:block"
    width={1920}
    height={1080}
  />
  <div
    class="relative z-10 flex h-full flex-col items-center justify-center text-gray-100 shadow-xl"
  >
    <h1
    data-testid="landscape-text"
      transition:name="heroTxt"
      class="text-center text-6xl font-bold drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,4)] md:text-8xl"
    >
      {mainText}
    </h1>
    <h2
      data-testid="intro-text"
      transition:name="introTxt"
      class="pb-6 text-center text-2xl drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,4)] md:text-4xl"
    >
      {secondaryText}
    </h2>
  </div>
</section>
