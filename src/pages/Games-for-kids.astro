---
import Layout from "../layouts/Layout.astro";

//adjust these variable to change your content
const title = "Games for Kids";
const introText = "";
---

<Layout title="Anomalous Research Group | Games for Kids">
  <div
    class="flex h-[40vh] items-center justify-center bg-[url('/landscape.jpg')] sicko:bg-[url('/landscape-sicko.png')] bg-cover bg-center py-20 text-center text-6xl font-bold text-white shadow-xl"
  >
    <p
      transition:name="heroTxt"
      class="drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,4)]"
    >
      {title}
    </p>
  </div>
  <div class="p-5 text-xl" transition:name="introTxt">
    <h3>Crossword for Kids</h3>
    <img src="/crossword-for-kids.png"/>
    <h3>Wordsearch for Kids</h3>
    <img src="/wordsearch-for-kids.png" class="drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,4)]"/>
  </div>

</Layout>

<style>
    h3 {
        font-weight: 800;
        font-size: 40px;
        margin-top: 25px;
        margin-bottom: 20px;
    }
    img {
    }
    a:hover {
        text-decoration: underline;
    }
</style>
