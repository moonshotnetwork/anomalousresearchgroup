---
import Layout from "../layouts/Layout.astro";
import MoreService from "../components/moreService.astro";
import AboutDesc from "../components/about.astro";

//adjust these variable to change your content
const title = "About";
const introText = "America's first line defense against anomalies";
---

<Layout title="Anomalous Research Group | About Us">
  <div
    class="flex h-[40vh] items-center justify-center bg-[url('/landscape.jpg')] sicko:bg-[url('/landscape-sicko.png')] bg-cover bg-center py-20 text-center text-6xl font-bold text-white shadow-xl filter-[url(#glitchfilter)]"
  >
    <p
      transition:name="heroTxt"
      class="drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,4)]"
    >
      {title}
    </p>
  </div>
  <h1
    transition:name="introTxt"
    class="m-10 mb-20 mt-40 text-center text-xl font-bold filter-[url(#glitchfilter)]"
  >
    {introText}
  </h1>

  <AboutDesc />
  <MoreService />
</Layout>
